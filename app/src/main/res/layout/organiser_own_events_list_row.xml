<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ownEventsEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="TextView"
        android:textColor="@color/darkest_grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ownEventsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/darkest_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/ownEventsEventName"
        app:layout_constraintTop_toBottomOf="@+id/ownEventsEventName" />

    <TextView
        android:id="@+id/ownEventsFacility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/ownEventsDate"
        app:layout_constraintTop_toBottomOf="@+id/ownEventsDate" />

    <TextView
        android:id="@+id/ownEventsParticipantNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="RSVP'd:"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/ownEventsFacility"
        app:layout_constraintTop_toBottomOf="@+id/ownEventsFacility" />

    <TextView
        android:id="@+id/ownEventsParticipantNumberPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ownEventsParticipantNumberLabel"
        app:layout_constraintTop_toTopOf="@+id/ownEventsParticipantNumberLabel" />

    <Button
        android:id="@+id/viewParticipantsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="View Participants"
        app:layout_constraintBottom_toBottomOf="@+id/ownEventsParticipantNumberLabel"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>