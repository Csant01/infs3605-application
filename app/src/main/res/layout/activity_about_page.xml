<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".AboutPageActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="414dp"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AboutLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="ABOUT:"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/aboutAppDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="UNSW Unite aims to facilitate international engagement activities at the prestigious University of New South Wales. This app provides a unified platform for UNSW Staff, external organisers and UNSW Alumni to connect and view, manage, track events and receive feedback."
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/AboutLabel"
        app:layout_constraintTop_toBottomOf="@+id/AboutLabel" />

    <TextView
        android:id="@+id/aboutCategory"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="CATEGORY:"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/aboutAppDescription"
        app:layout_constraintTop_toBottomOf="@+id/aboutAppDescription" />

    <TextView
        android:id="@+id/aboutSeller"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="SELLER:"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/aboutCategory"
        app:layout_constraintTop_toBottomOf="@+id/aboutCategory" />

    <TextView
        android:id="@+id/aboutPurchases"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="IN-APP  PURCHASES:"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/aboutSeller"
        app:layout_constraintTop_toBottomOf="@+id/aboutSeller" />

    <TextView
        android:id="@+id/aboutCopyright"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="COPYRIGHT:"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/aboutPurchases"
        app:layout_constraintTop_toBottomOf="@+id/aboutPurchases" />

    <TextView
        android:id="@+id/aboutCategoryResponse"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:text="Education"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/aboutCategory"
        app:layout_constraintTop_toTopOf="@+id/aboutCategory" />

    <TextView
        android:id="@+id/aboutSellerResponse"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:text="UNSW Unite Corporation"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/aboutSeller"
        app:layout_constraintTop_toTopOf="@+id/aboutSeller" />

    <TextView
        android:id="@+id/aboutInAppResponse"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:text="No"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/aboutPurchases"
        app:layout_constraintTop_toTopOf="@+id/aboutPurchases" />

    <TextView
        android:id="@+id/aboutCopyrightResponse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="2023 UNSW Unite Corporation. All Rights Reserved."
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/aboutCopyright"
        app:layout_constraintTop_toTopOf="@+id/aboutCopyright" />
</androidx.constraintlayout.widget.ConstraintLayout>