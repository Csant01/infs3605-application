<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventFeedbackActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="386dp"
        android:layout_marginTop="56dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/feedbackEventImage"
                android:layout_width="61dp"
                android:layout_height="59dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/satisfactionResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#444443"
                app:layout_constraintStart_toEndOf="@+id/satisfactionLabel"
                app:layout_constraintTop_toBottomOf="@+id/feedbackEventName" />

            <TextView
                android:id="@+id/reattendanceResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#444443"
                app:layout_constraintStart_toEndOf="@+id/reattendanceLabel"
                app:layout_constraintTop_toBottomOf="@+id/satisfactionResponse" />

            <TextView
                android:id="@+id/usefulnessResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#444443"
                app:layout_constraintStart_toEndOf="@+id/usefulnessLabel"
                app:layout_constraintTop_toBottomOf="@+id/reattendanceLabel" />

            <TextView
                android:id="@+id/satisfactionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif-medium"
                android:text="SATISFACTION:"
                android:textColor="#444443"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/feedbackEventImage" />

            <TextView
                android:id="@+id/feedbackEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#444443"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/feedbackEventImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/reattendanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:text="LIKELINESS TO RE-ATTEND:"
                android:textColor="#444443"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/satisfactionLabel" />

            <TextView
                android:id="@+id/usefulnessLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:text="USEFULNESS:"
                android:textColor="#444443"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reattendanceLabel" />

            <TextView
                android:id="@+id/agendaRatingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:text="EVENT AGENDA RATING:"
                android:textColor="#444443"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/usefulnessLabel" />

            <TextView
                android:id="@+id/agendaRatingResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#444443"
                app:layout_constraintStart_toEndOf="@+id/agendaRatingLabel"
                app:layout_constraintTop_toBottomOf="@+id/usefulnessResponse" />

            <TextView
                android:id="@+id/commentsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="sans-serif-medium"
                android:text="ADDITIONAL COMMENTS:"
                android:textColor="#444443"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/agendaRatingLabel" />

            <TextView
                android:id="@+id/commentsResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="37dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#444443"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/commentsLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@android:color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/staff_alumni_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>