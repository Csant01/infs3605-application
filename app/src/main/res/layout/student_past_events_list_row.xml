<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp"
        app:cardBackgroundColor="@color/light_grey"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pastEventsImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/pastOrganisersEventText"
                app:srcCompat="@mipmap/ic_launcher_round"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/pastEventsNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Industry Mentoring Night"
                android:textColor="@color/darkest_grey"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pastEventsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="24th April 2023"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pastEventsImage" />

            <TextView
                android:id="@+id/pastOrganisersEventText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UNSW BITSA"
                android:textColor="@color/darkest_grey"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/pastEventsNameText"
                app:layout_constraintTop_toBottomOf="@+id/pastEventsNameText" />

            <Button
                android:id="@+id/feedbackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="PROVIDE FEEDBACK"
                android:textColorHighlight="@color/darkest_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pastEventsImage" />

            <TextView
                android:id="@+id/feedbackStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="Feedback Pending"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/pastOrganisersEventText"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/pastEventCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Sydney"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/pastEventsDate"
                app:layout_constraintTop_toBottomOf="@+id/pastEventsDate" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>